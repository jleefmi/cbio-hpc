[global]
	server string = Samba Server Version %v
	security = user
	map to guest = Bad User
	guest account = <%= @user %>
	log level = <%= node[:cshared][:server][:samba][:log_level] %>
	max xmit = 65535
	deadtime = 15
	socket options = TCP_NODELAY IPTOS_LOWDELAY SO_KEEPALIVE SO_RCVBUF=8192 SO_SNDBUF=8192
	idmap config * : backend = tdb
	use sendfile = Yes
	kernel oplocks = No
	oplocks = No
	level2 oplocks = No

[shared]
	comment = "Shared file system"
	path = <%= @shared_dir %>
	force user = <%= @user %>
	force group = <%= @user %>
	read only = No
	acl check permissions = No
	guest only = Yes
	guest ok = Yes
